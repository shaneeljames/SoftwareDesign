<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:padding="5dp"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv"
            android.support.v7.cardview:cardElevation="5dp"
            android:clipChildren="false"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/session"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/subject"
                    android:layout_toRightOf="@+id/session"
                    android:layout_alignParentTop="true"
                    android:textSize="22sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tutorName"
                    android:layout_toRightOf="@+id/subject"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/amount"
                    android:layout_toRightOf="@+id/session"
                    android:layout_below="@+id/subject"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"
                    android:layout_toRightOf="@+id/session"
                    android:layout_below="@+id/amount"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time"
                    android:layout_toRightOf="@+id/session"
                    android:layout_below="@+id/date"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/descTxt"
                    android:layout_toRightOf="@+id/session"
                    android:layout_below="@+id/time"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status"
                    android:layout_toRightOf="@+id/session"
                    android:layout_below="@+id/descTxt"
                    />

                <TextView
                    android:id="@+id/sessID"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/available"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/cancel_session"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cancel"
                    android:layout_alignParentRight="true"
                  />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>